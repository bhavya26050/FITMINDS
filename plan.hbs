justify-content: space-around;

width: 30%;

}

.nav-links li {

list-style: none;

} 
.nav-links a { 
color: white;

text-decoration: none;

letter-spacing: 3px;

font-weight: bold;

font-size: 14px;

padding: 14px 16px;
}
.nav-links a:hover:not(.active) {

